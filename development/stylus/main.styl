body
	color #000
	display block
	margin 0 auto
	padding 20px 0 0 
	text-align center
	width 1200px
.minion
	display block
	.corpo
		background-color #F8DB8B
		// background linear-gradient(to right, #F8DB8B , #F5CB81)
		border-radius 185px 185px 52px 52px
		display block
		height 800px
		margin 0 auto
		position relative
		width 400px
		.oculos
			background radial-gradient( circle, #959998 55%, #CAD0CC)
			// background-color #ADAFAC
			border-radius 50%
			box-shadow inset -4px -9px 10px 0px rgba(255, 255, 255, 0.4)
			display inline-block
			height 280px
			margin 80px auto 0
			position relative
			width 280px
			&:before
			&:after
				border-bottom 3px solid #000
				border-top 3px solid #000
				background radial-gradient(black 15%, transparent 16%) 0 0, radial-gradient(black 15%, transparent 16%) 8px 8px, radial-gradient(rgba(255,255,255,.1) 15%, transparent 20%) 0 1px, radial-gradient(rgba(255,255,255,.1) 15%, transparent 20%) 8px 9px
				background-color #282828
				background-size 5px 5px
				content ''
				display block
				height 40px
				position absolute
				width 62px
				top 118px
			&:before
				border-right 3px solid #959998
				left -62px
			&:after
				border-left 3px solid #BCC2BE
				right -62px
			.olho
				background radial-gradient( circle, #fff 55%, #B1ADAE)
				border-radius 50%
				display block
				height 200px
				margin 40px auto 0
				position relative
				overflow hidden
				width 200px
				&:before
					background-color #F8DB8B
					content ''
					display block
					height 25px
					position absolute
					top 0
					right 0
					width 200px
					animation-name piscar
					animation-duration 0.7s
					animation-timing-function ease
					animation-delay 4s
					z-index 2
				&:after
					background-color #F8DB8B
					bottom 0
					content ''
					display block
					height 15px
					position absolute
					right 0
					width 200px
				.iris
					background radial-gradient( circle, #B8733A 45%, #542315)
					// background #542315
					border-radius 50%
					display block
					height 60px
					margin 70px
					position relative
					width 60px
					&:before
						background-color #000
						border-radius 50%
						content ''
						display inline-block
						height 30px
						margin 15px auto 0
						width 30px
					&:after
						background-color #fff
						border-radius 50%
						content ''
						display block
						height 10px
						position absolute
						right 10px
						top 10px
						width 10px
		.boca
			background #290A08
			border 1px solid #000
			border-radius 25px 25px 75px 75px
			display block
			height 90px
			margin 30px auto 0
			overflow hidden
			position relative
			width 200px
			.dente
				background radial-gradient( circle, #fff 55%, #B1ADAE)
				border-radius 0 0 10px 10px
				display block
				float left
				height 50px
				margin -12px 0 0
				position relative
				width 50px
			.lingua
				background radial-gradient(#722B25 15%, transparent 16%) 0 0, radial-gradient(#722B25 15%, transparent 16%) 8px 8px, radial-gradient(rgba(255,255,255,.1) 15%, transparent 20%) 0 1px, radial-gradient(rgba(255,255,255,.1) 15%, transparent 20%) 8px 9px
				background-color #8C413C
				background-size 5px 5px
				border-radius 0 10px 0 0
				display block
				float left
				height 20px
				margin 32px 0 0
				position relative
				width 100px
				&:after
					background radial-gradient(#722B25 15%, transparent 16%) 0 0, radial-gradient(#722B25 15%, transparent 16%) 8px 8px, radial-gradient(rgba(255,255,255,.1) 15%, transparent 20%) 0 1px, radial-gradient(rgba(255,255,255,.1) 15%, transparent 20%) 8px 9px
					background-color #8C413C
					background-size 5px 5px
					border-radius 10px 0 0 0
					content ''
					display block
					float right
					height 20px
					margin 0 -80px 0 0
					position relative
					width 85px
		.roupa
			border-radius 0 0 50px 50px
			display block
			float left
			height 280px
			margin 40px 0 0
			position relative
			width 100%
			.alca
				background repeating-linear-gradient(45deg, #608EB0, #608EB0 2px, #2C5A7E 2px, #2C5A7E 4px)
				border 2px dashed #B0C4A9
				border-radius 5px 5px 3px 3px
				box-shadow 0 0 0 2px #2C5A7E
				display block
				height 130px
				position absolute
				top -84px
				width 15px
				.botao
					background-color #333534
					border-radius 50%
					bottom 5px
					display block
					height 14px
					position absolute
					width 14px
					&:before
						color #2C5A7E
						content '+'
						display block
						font-family arial
						font-size 13px
						font-weight bold
						height 14px
						width 14px
				&.alca-esq
					box-shadow -3px 3px 3px rgba(0,0,0,0.8)
					left 40px
					transform rotate(-55deg)
				&.alca-dir
					box-shadow 3px 3px 3px rgba(0,0,0,0.8)
					right 40px
					transform rotate(55deg)
			.centro
				background repeating-linear-gradient(45deg, #608EB0, #608EB0 2px, #2C5A7E 2px, #2C5A7E 4px)
				border 2px dashed #B0C4A9
				box-shadow 0 0 0 3px #2C5A7E
				display block
				float left
				height 136px
				margin 0 75px
				width 246px
				.bolso
					background repeating-linear-gradient(-45deg, #608EB0, #608EB0 2px, #2C5A7E 2px, #2C5A7E 4px)
					border 2px dashed #B0C4A9
					border-radius 0 0 20px 20px
					box-shadow 0 0 0 3px #2C5A7E, 0px 5px 7px rgba(10, 10, 0, 0.5)
					display block
					height 70px
					margin 35px auto 0
					position relative
					width 90px
					// &:before
					// 	background-color #000
					// 	border-radius 50%
					// 	content 'G'
					// 	display block
					// 	height 40px
					// 	margin 15px auto 0
					// 	width 40px
			.baixo
				background repeating-linear-gradient(45deg, #608EB0, #608EB0 2px, #2C5A7E 2px, #2C5A7E 4px)
				border 2px dashed #B0C4A9
				border-radius 0 0 50px 50px
				box-shadow 0 0 0 3px #2C5A7E, 0 6px 5px rgba(0,0,0,.8)
				display block
				float left
				height 130px
				margin 3px 0 0 3px
				width 390px
			
		

// ANIMACAO
@keyframes piscar {
	0%{ height: 25px;}
	40%{ height: 185px;}
	60%{ height: 25px;}
	80%{ height: 185px;}
	100% { height: 25px;}
}
					
			