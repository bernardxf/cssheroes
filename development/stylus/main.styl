							border-left 30px solid transparent
							border-right 70px solid transparent
							content ''
							display block
							left -25px
							position absolute
							top -50px
						&:after
							border-bottom 60px solid transparent
							border-right 50px solid #00823C
							border-top 60px solid transparent
							content ''
							left -100px
							position absolute
							top -112px
					.olho-dir
						left auto
						right 25px
						&:before
							border-left 70px solid transparent
							border-right 30px solid transparent
							left auto
							right -25px
						&:after
							border-left 50px solid #00823C
							border-right 0
							left auto
							right -100px
					.nariz
						background-color #00823C
						display block
						height 120px
						left 150px
						position absolute
						top 27px
						width 20px
