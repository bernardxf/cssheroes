				display block
				float left
				height 450px
				overflow hidden
				position relative
				width 400px
				z-index 4
				&:before
				&:after
					border-bottom 85px solid #00823c
					border-left 0px solid transparent
					border-right 120px solid transparent
					bottom 0
					content ''
					left 0
					position absolute
				&:after
					border-left 120px solid transparent
					border-right 0px solid transparent
					left auto
					right 0
				.mascara
					display block
					height 120px
					margin 200px auto 0
					position relative
					width 320px
