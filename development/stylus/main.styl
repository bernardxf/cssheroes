// ANIMACAO
@keyframes piscar {
	0%{ height: 25px; }
	40%{ height: 185px; }
	60%{ height: 25px; }
	80%{ height: 185px; }
	100% { height: 25px; }
}

@keyframes pulse {
	0%{ box-shadow: 0 0 0px 0px rgba(63,180,0,0.6), inset 0 0 0px 0px rgba(63,180,0,0.6); }
	50%{ box-shadow: 0 0 15px 25px rgba(63,180,0,0.6), inset 0 0 15px 15px rgba(63,180,0,0.6); }
	100%{ box-shadow: 0 0 0px 0px rgba(63,180,0,0.6), inset 0 0 0px 0px rgba(63,180,0,0.6); }
}
					
			