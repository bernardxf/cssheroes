body > div
	display block
	float left
	padding 80px 0
	text-align center
	width 100%
	.corpo
		border-radius 185px 185px 52px 52px
		display inline-block
		height 800px
		margin 0 auto
		position relative
		width 400px
	&.lanterna
		.corpo
			background-color #000
			overflow hidden
			.rosto
				background-color #D5B697
